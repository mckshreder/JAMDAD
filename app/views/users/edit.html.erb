<h1 class="jumbotron">Edit User Info/Password</h1>

<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited you're info from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for @user, url: update_user_path  do |f| %>

    <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control"%>
    </div>
    
    <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
    </div>
    
    <div class="form-group">
    <%= f.label :password, "New Password" %> 
    <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="form-group">
    <%= f.label :password_confirmation, "Confirm New Password" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
    <br>
    <%= f.submit "Update Info", class: "btn btn-primary" %>

<% end %>
<hr>